<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.SettingsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- TODO: Update blank fragment layout -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Header -->
            <TextView
                android:id="@+id/tvSettingsHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="32dp"
                android:text="Personalize Your Game!"
                android:textSize="32sp"
                app:layout_constraintBottom_toTopOf="@+id/tvBoardSize"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Board Size -->
            <TextView
                android:id="@+id/tvBoardSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/board_size"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/boardSize"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvSettingsHeader" />

            <LinearLayout
                android:id="@+id/boardSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:background="@drawable/settings_btn_bg"
                android:gravity="center_horizontal"
                android:padding="20dp"
                app:layout_constraintBottom_toTopOf="@+id/tvVertices"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvBoardSize">

                <RadioGroup
                    android:id="@+id/radioGrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation='horizontal'>

                    <RadioButton
                        android:id="@+id/rbGrid4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="33"
                        android:background="@drawable/btn_selector"
                        android:button="@null"
                        android:buttonTint="@color/white"
                        android:gravity="center"
                        android:text="4 x 4"
                        android:textColor="@color/white" />

                    <RadioButton
                        android:id="@+id/rbGrid5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="33"
                        android:background="@drawable/btn_selector"
                        android:button="@null"
                        android:buttonTint="@color/white"
                        android:gravity="center"
                        android:text="5 x 5"
                        android:textColor="@color/white" />

                    <RadioButton
                        android:id="@+id/rbGrid6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="33"
                        android:background="@drawable/btn_selector"
                        android:button="@null"
                        android:buttonTint="@color/white"
                        android:gravity="center"
                        android:text="6 x 6"
                        android:textColor="@color/white" />
                </RadioGroup>
            </LinearLayout>

            <!-- Vertices -->
            <TextView
                android:id="@+id/tvVertices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vertices"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/vertices"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/boardSize" />

            <LinearLayout
                android:id="@+id/vertices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:background="@drawable/settings_btn_bg"
                android:gravity="center_horizontal"
                android:padding="20dp"
                app:layout_constraintBottom_toTopOf="@+id/tvPlayerColor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvVertices">

                <RadioGroup
                    android:id="@+id/radioVertices"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation='horizontal'>

                    <RadioButton
                        android:id="@+id/rbDot"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="33"
                        android:background="@drawable/btn_selector"
                        android:button="@null"
                        android:drawableStart="@drawable/ic_circle"
                        android:gravity="center"
                        android:paddingLeft="30dp" />

                    <RadioButton
                        android:id="@+id/rbTriangle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="33"
                        android:background="@drawable/btn_selector"
                        android:button="@null"
                        android:drawableStart="@drawable/ic_triangle"
                        android:gravity="center"
                        android:paddingLeft="30dp" />

                    <RadioButton
                        android:id="@+id/rbStar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="33"
                        android:background="@drawable/btn_selector"
                        android:button="@null"
                        android:drawableStart="@drawable/ic_star"
                        android:gravity="center"
                        android:paddingLeft="30dp" />
                </RadioGroup>
            </LinearLayout>

            <!-- Player Color -->
            <TextView
                android:id="@+id/tvPlayerColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/color_for_player"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/playerColor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vertices" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:layout_marginBottom="21dp"
                android:scaleX=".8"
                android:scaleY=".8"
                android:textColor="@color/white"
                app:layout_constraintBottom_toTopOf="@+id/playerColor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.33"
                app:layout_constraintStart_toEndOf="@+id/tvPlayerColor"
                app:layout_constraintTop_toBottomOf="@+id/vertices"
                app:layout_constraintVertical_bias="0.6" />

            <LinearLayout
                android:id="@+id/playerColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:background="@drawable/settings_btn_bg"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvPlayerColor">

                <RadioGroup
                    android:id="@+id/radioColorA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation='horizontal'>
                        <RadioButton
                            android:id="@+id/rbColorBlue"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_margin="10dp"
                            android:layout_weight="33"
                            android:background="@drawable/btn_blue_selector"
                            android:button="@null" />

                        <RadioButton
                            android:id="@+id/rbColorRed"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_margin="10dp"
                            android:layout_weight="33"
                            android:background="@drawable/btn_red_selector"
                            android:button="@null" />

                        <RadioButton
                            android:id="@+id/rbColorYellow"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_margin="10dp"
                            android:layout_weight="33"
                            android:background="@drawable/btn_yellow_selector"
                            android:button="@null" />
                </RadioGroup>
                <RadioGroup
                    android:id="@+id/radioColorB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation='horizontal'>
                    <RadioButton
                        android:id="@+id/rbColorPink"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:layout_weight="33"
                        android:background="@drawable/btn_pink_selector"
                        android:button="@null" />

                    <RadioButton
                        android:id="@+id/rbColorGreen"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:layout_weight="33"
                        android:background="@drawable/btn_green_selector"
                        android:button="@null" />

                    <RadioButton
                        android:id="@+id/rbColorPurple"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:layout_weight="33"
                        android:background="@drawable/btn_purple_selector"
                        android:button="@null" />
                </RadioGroup>

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</FrameLayout>